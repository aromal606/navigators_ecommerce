    <script>
      function check() {

        let ofrnumber = document.getElementById('offer').value

        if (ofrnumber <= 20) {
          document.getElementById('msg').style.display = 'none'
          document.getElementById('couponButton').style.display = 'block'
          document.getElementById('couponButton1').style.display = 'none'

          return true;
          //return true
        } else {

          document.getElementById('msg').style.display = 'block'
          document.getElementById('couponButton').style.display = 'none'
          document.getElementById('couponButton1').style.display = 'block'


          return false;
        }

      }
    </script>
