<main id="main" class="main">

  <head>

    <style>

    </style>
  </head>

  <body>

    <button class="border border-0"></i></button>





    <div class="pagetitle" style="padding-left:7%">
      <h1>Product management</h1>

    </div>
    <!-- End Page Title -->




    <div class="container mt-5 ">
      <div class="row">
        <a href="/admin/addproduct"> <button type="button" class="btn btn-primary" data-bs-toggle="modal"
            data-bs-target="#exampleModal">
            Add New
          </button></a>

      </div>
      <table class="table table-bordered text-center mt-1" id="">
        <thead>
          <tr style="text-align: ;">
            <th scope="col">no</th>
            <th scope="col">image</th>
            <th scope="col">product name</th>
            {{!-- <th scope="col">discription</th> --}}
            <th scope="col">price</th>
            <th scope="col">brand</th>
            <th scope="col">category</th>
            <th scope="col">stock</th>
            <th>option</th>
            {{!-- <th></th> --}}
          </tr>
        </thead>
        <tbody>
          {{#each results.products}}
          <tr class="text-center align-middle">
            <td scope="row">{{inc @index}}</td>
            <td><img style="width:50px;height:50px;" src="/pro_img/{{this.img.[0]}}" alt=""></td>
            <td>{{this.productname}}</td>
            {{!-- <td>{{this.discription}}</td> --}}
            <td>{{this.price}}</td>
            <td>{{this.brand}}</td>
            <td>{{this.categoryDetails.categoryname}}</td>
            <td>{{this.stock}}</td>




            <td>
              {{!-- {{#if status}} --}}
              <a class="" href="/admin/editproduct/{{this._id}}"><i class="bi bi-pen-fill fa-lg"></i></a>
              {{!-- {{else}} --}}

              <a class="" style="" href="/admin/deleteproduct/{{this._id}}"
                onclick="return confirm('Are you want to delete {{this.productname}}')"><i
                  class="bi bi-trash fa-lg"></i></a>
              {{!-- {{/if}} --}}
            </td>

            {{!-- <td>

            </td> --}}


          </tr>
          {{/each}}
        </tbody>

      </table><nav aria-label=" Page navigation">
                            <div class="container ">

                                <ul class="pagination d-flex justify-content-center ">
                                    {{#ifCond '1' results.currentPage}}

                                    <li class="page-item disabled" style="width: 45px;">
                                        <a class="page-link page-link-prev"
                                            href="/admin/productmanagement/?page={{results.previous.page}}" aria-label="Previous"
                                            tabindex="-1" aria-disabled="true">

                                            <i class="bi bi-arrow-left-short"></i>

                                        </a>
                                    </li>
                                    {{else}}
                                    <li class="page-item" style="width: 60px;">
                                        <a class="page-link page-link-prev"
                                            href="/admin/productmanagement/?page={{results.previous.page}}" aria-label="Previous"
                                            tabindex="-1" aria-disabled="true">

                                            <i class="bi bi-arrow-left"></i>
                                        </a>
                                    </li>
                                    {{/ifCond}}
                                    {{#each results.pages}}
                                    <li class="page-item" style="width: 45px;"><a class="page-link"
                                            href="/admin/productmanagement/?page={{this}}">{{this}}</a></li>

                                    {{/each}}
                                    {{#ifCond results.pageCount results.currentPage}}
                                    <li class="page-item disabled" style="width: 60px;">
                                        <a class="page-link page-link-next" href="/admin/productmanagement/?page={{results.next.page}}"
                                            aria-label="Next">
                                            <i class="bi bi-arrow-right"></i>

                                        </a>
                                    </li>
                                    {{else}}
                                    <li class="page-item " style="width: 45px;">
                                        <a class="page-link page-link-next" href="/admin/productmanagement/?page={{results.next.page}}"
                                            aria-label="Next">
                                            <i class="bi bi-arrow-right"></i>

                                        </a>
                                    </li>
                                    {{/ifCond}}
                                </ul>
                            </div>
                        </nav>
    </div>




  </body>

  </html>